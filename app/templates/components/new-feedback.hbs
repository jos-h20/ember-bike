{{#if addNewFeedback}}
<section class="feedbackSection">
  <h3>New Feedback:</h3>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="name">Name:</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="eval">Review:</label>
        {{textarea value=eval id="eval"}}
      </div>

      <button class="btn saveBtn" {{action 'saveFeedback'}}>Save</button>
    </form>
  </div>
</section>
{{else}}
<div class="container">
  <div class="feedback text-center">
    <h2 class="text-center" {{action 'feedbackFormShow'}}>Leave (be more constructive with your) Feedback</h2>
  </div>
</div>
{{/if}}
