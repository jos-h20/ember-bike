{{#if addNewFeedback}}
<section class="feedbackSection">
  <h3>Tell us what you think about this product:</h3>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="name">Name:</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="rating">Rate 1-5:</label>
        {{input type=number value=rating id="rating"}}
      </div>

      <div class="form-group">
        <label for="eval">Review:</label>
        {{textarea value=eval id="eval"}}
      </div>

      <button class="btn saveBtn" {{action 'saveFeedback'}}>Submit Feedback</button>
    </form>
  </div>
</section>
{{else}}

  <div class="feedback text-center">
    <button class="btn" {{action 'feedbackFormShow'}}>Leave Feedback</button>
  </div>
{{/if}}
